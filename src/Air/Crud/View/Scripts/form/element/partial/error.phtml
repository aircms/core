<?php

use Air\Form\Element\ElementAbstract;

/** @var ElementAbstract $element */
$element = $this->element;

if (!$element->hasError()) {
  return;
}

try {
  $errors = implode('<br />', $element->getErrorMessages());
} catch (Throwable) {
  $errors = null;
}
?>
<div class="text-danger-emphasis small mt-2">
  <?php echo $errors; ?>
</div>
